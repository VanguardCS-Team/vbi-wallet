<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('table.table-selectable tbody tr').forEach(row => {
    row.style.cursor = 'pointer';

    row.addEventListener('click', e => {
      // Don’t override clicks on links or checkboxes
      if (e.target.closest('a') || e.target.closest('input[type="checkbox"]')) return;

      const emailLink = row.querySelector('td .text-reset');
      if (!emailLink) return;

      const email = emailLink.textContent.trim();
      if (email) {
        window.location.href = `/user-details?id=${encodeURIComponent(email)}`;
      }
    });
  });
});
</script>